{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  /*
    IMPORTANT: narrow "include" to only the Next app source that should be compiled.
    Replace app/, pages/, components/ with your actual frontend directories if different.
  */
  "include": [
    "next-env.d.ts",
    "app/**/*",
    "pages/**/*",
    "components/**/*",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "backend", "backend/**", "dist", ".next"]
}